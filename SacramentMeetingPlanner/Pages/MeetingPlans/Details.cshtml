@page
@model SacramentMeetingPlanner.Pages.MeetingPlans.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Meeting Plan</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MeetingPlan.MeetingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MeetingPlan.MeetingDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MeetingPlan.ConductingLeader)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MeetingPlan.ConductingLeader)
        </dd>
        <dt class="col-sm-2">
            Opening Hymn
        </dt>
        <dd class="col-sm-10">
            @Model.MeetingPlan.GetOpeningHymn()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MeetingPlan.OpeningPrayer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MeetingPlan.OpeningPrayer)
        </dd>
        <dt class="col-sm-2">
            Sacrament Hymn
        </dt>
        <dd class="col-sm-10">
            @Model.MeetingPlan.GetSacramentHymn()
        </dd>
        <p class="col-sm-12">
            <strong>Administration of the Sacrament by the Priesthood Brethren</strong>
        </p>
        @if (Model.MeetingPlan.GetIntermediategHymn() != null)
        {
            <dt class="col-sm-2">
                Intermediate Hymn
            </dt>
            <dd class="col-sm-10">
                @Model.MeetingPlan.GetIntermediategHymn()
            </dd>
        }
        @{ int counter = 0;}
        @foreach (var meetingSpeaker in Model.Speakers)
        {
            <dt class="col-sm-2">
                Speaker @(++counter)
            </dt>
            <dd class="col-sm-10">
                @meetingSpeaker.MeetingSpeakerName (@meetingSpeaker.MeetingSpeakerTopic)
            </dd>
        }
        <dt class="col-sm-2">
            Closing Hymn
        </dt>
        <dd class="col-sm-10">
            @Model.MeetingPlan.GetClosingHymn()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MeetingPlan.ClosingPrayer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MeetingPlan.ClosingPrayer)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.MeetingPlan.MeetingPlanID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
