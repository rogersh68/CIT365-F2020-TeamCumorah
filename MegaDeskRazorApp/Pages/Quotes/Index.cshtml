@page
@model MegaDeskRazorApp.Pages.Quotes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <div class="form-row align-items-center">
        <div class="col-auto">
            <label class="sr-only" for="customerName">Customer Name</label>
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <div class="input-group-text">Customer Name</div>
                </div>
                <input type="text" class="form-control" id="customerName" placeholder="Customer Name" asp-for="SearchByName" />
            </div>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary mb-2">Filter</button> |
            <a asp-page="./Index">Back to full List</a>
        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-SortQuote="@Model.SortByName">
                    @Html.DisplayNameFor(model => model.Quote[0].customerName)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-SortQuote="@Model.SortByDate">
                    @Html.DisplayNameFor(model => model.Quote[0].quoteDate)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].rushDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].deskWidth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].deskDepth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].deskDrawer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].desktopMaterial)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Quote)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.customerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.quoteDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rushDays)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.deskWidth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.deskDepth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.deskDrawer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.desktopMaterial)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
