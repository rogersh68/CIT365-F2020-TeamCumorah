@page "{id:int?}"
@model SacramentMeetingPlanner.Pages.SacramentPrograms.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                DateOfMeeting
            </th>
            <th>
                ConductingLeader
            </th>
            <th>
                OpeningSong
            </th>
            <th>
                SacramentHymn
            </th>
            <th>
                ClosingSong
            </th>
            <th>
                IntermediateSong
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model.SacramentProgramData.SacramentPrograms) {

    string selectedRow = "";
    if(item.ID == Model.ProgramID)
    {
        selectedRow = "table-success";
    }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.DateOfMeeting)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConductingLeader)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpeningSong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SacramentHymn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClosingSong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IntermediateSong)
            </td>
            <td>
                @{ foreach (var speaker in item.SpeakerAssignments)
                    {
                        @speaker.Speaker.SpeakerID @:speaker.Speaker.Name <br />
                    }
                        }
            </td>
            <td>
                <a asp-action="Index" asp-route-id="@item.ID">Select</a>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
